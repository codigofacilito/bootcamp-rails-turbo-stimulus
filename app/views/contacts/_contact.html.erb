<div id="<%= dom_id contact %>" class="bg-primary bg-opacity-10 p-3 rounded mt-2">
  <p class="h1 fs-1">
    <i class="bi bi-person-lines-fill"></i>
    <%= contact.identifier %>
  </p>

  <% if contact.person %>
    <p class="fs-4">
      <%= contact.person.name %>
    </p>
  <% end %>

  <p class="h5 mt-4">Teléfonos asociados</p>
  <% if contact.phone_numbers.any? %>
    <% contact.phone_numbers.each do |phone_number| %>
      <p class="text-secondary">
        <span class="bi bi-telephone-fill"></span>
        <%= phone_number.number %>
      </p>
    <% end %>
  <% else %>
    <p class="text-secondary">No hay números de teléfono asociados</p>
  <% end %>

</div>
